    <class-a>org.cloud.ssm.entity.vo.EmployeeVO</class-a>
    <class-b>org.cloud.ssm.entity.Employee</class-b>
    <field> 
      <a>department</a>
      <b>department.id</b>
    </field> 
  </mapping>
</mappings>